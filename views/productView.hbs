<div style="text-align:center"> <!-- start of page div -->
<div id="productdiv">
	<img src="clickarrow.png" id="arrowleft">

	<img src="clickarrow.png" id="arrowright" >
	<div id="productContent">
		<p>{{game.postContent}}<p>
	</div> 


<div id="productPicDiv">
<img id="productPicture" src="{{game.image}}">
</div>


	</div>

		<div id="productinfo">
		<h1>{{game.title}}</h1>
		<p>posted by:</p>
		<!-- the user who posted this, will take them to the user's page -->
		<a href="users?username={{game.username}}">{{game.username}}</a>
		<br>
		<br>
		<p> Price per Week: </p>
		<p>${{game.price}}</p>
		<br>

<form method="post" action="./makeUnavailable">

<button type="submit" id="checkOut" class="btn btn-primary" >Check Out Game</button> 
</form>





</div>

<h1>Related Products:</h1>
<div id="productrelated">

{{#each posts}}

<a href="product?productid={{this._id}}">

<div class="postingwrapper">
<div class="userposting">
<img class="img-thumbnail" src={{this.image}}>

</div>
<p>{{this.title}}</p>
<p>${{this.price}} per week</p>
</div>
</a>

{{/each}}


</div>


<h1>User Comments:</h1>

	<div id="productdes">


	<!--placeholder -->

	<!-- information for the review, date, rating, comment, reviewer, reviewee -->
	<h4>Leave Review </h4>
	
	<form method="post" action="./createReview">
		<select id="rating" name="rating">
  		<option value="1">1 (poor condition)</option>
  		<option value="2">2 (adequete)</option>
  		<option value="3">3 (good)</option>
  		<option value="4">4 (great)</option>
  		<option value="5">5 (excellent)</option>

		</select>
	
		<div class="form-group">
 		<h5>description</h5>
    	<textarea class = "form-control" rows = "8" id="leaveComment" name="comment"></textarea>
    	</div>

    	<button id="reviewButton" class="btn btn-primary" type="submit">Submit Review</button> 

	</form>


	<h4>What Users think of this product </h4>
	{{#each reviews}}
	<div class="review">
	<h4>Date: {{this.date}}</h4>
	<h5>Reviewer:{{this.reviewer}} </h5>
	<h5>Reviewee:{{this.reviewee}} </h5>
	<h5>Rating {{this.rating}} </h5>
	<h6>Review:</h6>
	<p>{{comment}}</p>
	</div>


	<!-- end of placeholder -->
	{{/each}}


	</div> <!-- end of review div-->




</div><!-- end of page div -->

