<script>
var $ads = $(".adcontainer").children();
function animate_ad(index) {
		$(".ad").eq(index).delay(5000).fadeOut(3000);

		if (index == 3) {
			index = 0;
		}
		else {
			index = index + 1;
		}		
		$(".ad").eq(index).delay(5000).fadeIn(3000, function() {
			animate_ad(index);


		});
}
animate_ad(0);
	
</script>


<script>

$(".container").mouseover(function() {
//want to set the firstchild to -1 so that it is behind the des
	$(this).children("div.item").css("z-index", 0);

});

$(".container").mouseout(function() {
	$(this).children("div.item").css("z-index", 1);
});


</script>
